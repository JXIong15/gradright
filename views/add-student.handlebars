<div class="col-md-6">
  <h2>Add A Student</h2>

  <form class="form student-form">
    <div class="form-group">
      <label for="stu-name">Name:<span style="color:red">*</span></label>
      <input class="form-input" type="text" id="stu-name" />
    </div>

    <div class="form-group">
      <label for="stu-id">Student ID#:<span style="color:red">*</span></label>
      <input class="form-input" type="text" id="stu-id" />
    </div>

    <div class="form-group">
      <label for="district">District:<span style="color:red">*</span></label>
      <select id="district">
        {{#each districts}}
          <option value="{{id}}">{{district_name}}</option>
        {{/each}}
      </select>
    </div>

    <div class="form-group">
      <label for="school">School Name:<span style="color:red">*</span></label>
      <input class="form-input" type="text" id="school" />
    </div>

    <div class="form-group">
      <label for="year">Current Year:<span style="color:red">*</span></label>
      <select id="year">
        <option value='9'>9th</option>
        <option value='10'>10th</option>
        <option value='11'>11th</option>
        <option value='12'>12th</option>
      </select>
    </div>

    <div class="form-group">
      <label for="math">Current Math Credit(s):<span style="color:red">*</span></label>
      <input class="form-input" type="text" id="math" />
    </div>

<div class="form-group">
      <label for="math">Current English Credit(s):<span style="color:red">*</span></label>
      <input class="form-input" type="text" id="eng" />
    </div>

    <div class="form-group">
      <label for="math">Current Science Credit(s):<span style="color:red">*</span></label>
      <input class="form-input" type="text" id="sci" />
    </div>

    <div class="form-group">
      <label for="math">Current Social Studies Credit(s):<span style="color:red">*</span></label>
      <input class="form-input" type="text" id="ss" />
    </div>

    <div class="form-group">
      <label for="math">Current Physical Education Credit(s):<span style="color:red">*</span></label>
      <input class="form-input" type="text" id="pe" />
    </div>

    <div class="form-group">
      <label for="math">Current Health Credit(s):<span style="color:red">*</span></label>
      <input class="form-input" type="text" id="health" />
    </div>

    <div class="form-group">
      <label for="math">Current Elective Credit(s):<span style="color:red">*</span></label>
      <input class="form-input" type="text" id="elective" />
    </div>


